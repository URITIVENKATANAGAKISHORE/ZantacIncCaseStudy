# Get the latest Amazon Linux 2 AMI for a region
data "aws_ami" "amazon_linux" {
  most_recent = true
  owners      = ["amazon"]

  filter {
    name   = "name"
    values = ["amzn2-ami-hvm-*-x86_64-gp2"]
  }
}

# Get available availability zones
data "aws_availability_zones" "available" {
  state = "available"
}

